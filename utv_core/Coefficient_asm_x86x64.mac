%include "Coefficient_nasm.mac"


%define RSHR(x, n) ((((x) >> ((n)-1)) + 1) >> 1)
%define RSHL(x, n) ((((x) << 1) + 1) << ((n)-1))

%define RSHRW(x, n) (RSHR((x), (n)) & 0ffffh)
%define RSHLW(x, n) (RSHL((x), (n)) & 0ffffh)

%define RSHRD(x, n) (RSHR((x), (n)) & 0ffffffffh)
%define RSHLD(x, n) (RSHL((x), (n)) & 0ffffffffh)


struc	yuvcoeff
	.y2rgb:	resw	8
	.uv2b:	resw	8
	.uv2g:	resw	8
	.uv2r:	resw	8
	.b2yuv:	resw	8
	.g2yuv:	resw	8
	.r2yuv:	resw	8
endstruc


	align	64
yoff	dw	16, 16, 16, 16
		dw	0, 0, 0, 0
uvoff	dw	128, 128, 128, 128
		dw	0, 0, 0, 0
yuvoff	dd	RSHLD(16, 14)
		dd	RSHLD(16, 14)
		dd	RSHLD(128, 14)
		dd	RSHLD(128, 14)

%macro	DEFINE_YUVCOEFF 2

%1:
	istruc	yuvcoeff
		at yuvcoeff.y2rgb
					dw	RSHRW(%2_Y2RGB, 11), 0
					dw	RSHRW(%2_Y2RGB, 11), 0
					dw	RSHRW(%2_Y2RGB, 11), 0
					dw	RSHRW(%2_Y2RGB, 11), 0
		at yuvcoeff.uv2b
					dw	RSHRW(%2_U2B, 11), 0
					dw	RSHRW(%2_U2B, 11), 0
					dw	RSHRW(%2_U2B, 11), 0
					dw	RSHRW(%2_U2B, 11), 0
		at yuvcoeff.uv2g
					dw	RSHRW(%2_U2G, 11), RSHRW(%2_V2G, 11)
					dw	RSHRW(%2_U2G, 11), RSHRW(%2_V2G, 11)
					dw	RSHRW(%2_U2G, 11), RSHRW(%2_V2G, 11)
					dw	RSHRW(%2_U2G, 11), RSHRW(%2_V2G, 11)
		at yuvcoeff.uv2r
					dw	0, RSHRW(%2_V2R, 11)
					dw	0, RSHRW(%2_V2R, 11)
					dw	0, RSHRW(%2_V2R, 11)
					dw	0, RSHRW(%2_V2R, 11)
		at yuvcoeff.b2yuv
					dw	RSHRW(%2_B2Y, 10)
					dw	0, 0
					dw	RSHRW(%2_B2Y, 10)
					dw	RSHRW(%2_B2U, 11)
					dw	RSHRW(%2_B2U, 11)
					dw	RSHRW(%2_B2V, 11)
					dw	RSHRW(%2_B2V, 11)
		at yuvcoeff.g2yuv
					dw	RSHRW(%2_G2Y, 10)
					dw	0, 0
					dw	RSHRW(%2_G2Y, 10)
					dw	RSHRW(%2_G2U, 11)
					dw	RSHRW(%2_G2U, 11)
					dw	RSHRW(%2_G2V, 11)
					dw	RSHRW(%2_G2V, 11)
		at yuvcoeff.r2yuv
					dw	RSHRW(%2_R2Y, 10)
					dw	0, 0
					dw	RSHRW(%2_R2Y, 10)
					dw	RSHRW(%2_R2U, 11)
					dw	RSHRW(%2_R2U, 11)
					dw	RSHRW(%2_R2V, 11)
					dw	RSHRW(%2_R2V, 11)
	iend

%endmacro

DEFINE_YUVCOEFF	bt601coeff, BT601
